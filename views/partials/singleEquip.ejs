                    </div>
                    <div class="mb-3 abstand01rem">
                        <label for="description" class="form-label"></label>
                        <input type="text" class="form-control" id="description" name="description" value="<%= data.description %>" required>
                    </div>
                    <div class="mb-3 abstand01rem">
                        <label for="articlenumber" class="form-label"></label>
                        <input type="text" class="form-control" id="description" name="articlenumber" value="<%= data.articlenumber %>" required>
                    </div>
                    <div class="mb-3 abstand01rem">
                        <label for="count" class="form-label"></label>
                        <input type="number" class="form-control" id="description" name="description" value="<%= data.count %>" required>
                    </div>
                    <button class="btn btn-primary">SPEICHERN</button>
                    <button onclick=editfunction(<%= data.id %>) id="editButton" class="btn btn-warning">ABBR</button>
