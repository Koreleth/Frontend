<!-- Nutzerkarte -->
<div class="card h-100 d-flex flex-column">
    <h5 class="card-title card-header">
        <a href="/users/<%= user.id %>">
            <%= user.username %>
        </a>
    </h5>
    <div class="card-body flex-grow-1">
        <p class="card-text">ID: <%= user.id %>
        </p>
        <p class="card-text">E-Mail: <%= user.email %>
        </p>
        <p class="card-text">Rolle: <%= user.role %>
        </p>
        <p class="card-text">Erstellt am: <%= user.created %>
        </p>
    </div>
    <div class="card-footer mt-auto">
        <a href="/users/edit/<%= user.id %>" id="editButton" class="btn btn-warning">
            <img src="../img/pencil.png" alt="Edit">
        </a>
        <a href="/users/delete/<%= user.id %>" id="deleteButton" class="btn btn-danger">
            <img src="../img/trash.png" alt="Delete">
        </a>
    </div>
</div>