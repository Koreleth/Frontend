<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Ausleihen</title>
  <!-- Einbindung von Bootstrap und benutzerdefinierten CSS-Dateien -->
  <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link rel="icon" href="/img/logoGR.png" type="image/x-icon">
</head>

<body>
  <!-- Einbindung der Navigationsleiste -->
  <%- include ('../partials/navbar') %>
  <!-- Einbindung der Alert-Nachrichten -->
  <%- include ('../partials/alerts') %>
  <% if (locals.auth) { %>
  <!-- Einbindung des Formulars zum Erstellen von Equipment, falls der Benutzer authentifiziert ist -->
  <%- include ('../partials/createEquipFormular', {user: user}) %>
  <% } %>
  <div class="container mt-4">

    <% if (locals.auth) { %>
    <!-- Button zum Hinzufügen von Equipment, falls der Benutzer authentifiziert ist -->
    <div class="text-right mb-3">
      <button id="singleButton" type="button" class="btn btn-primary">
        Equipment hinzufügen
      </button>
    </div>
    <% } %>

    <div class="content">

      <h1><%= data.title %></h1>
      <div class="row">
        <% // data.forEach((equipment)=> { %>
        <!-- Einbindung der einzelnen Equipment-Karten -->
        <%- include ('../partials/cardItem', {data: data}) %>
        <% // }); %>
      </div>
    </div>
  </div>
  <!-- Einbindung des Footers -->
  <%- include ('../partials/footer') %>
  <script src="/javascripts/script.js"></script>
  <script src="/javascripts/bootstrap.min.js"></script>
</body>

</html>