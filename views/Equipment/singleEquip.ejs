<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Equipment Details</title>
  <!-- Einbindung von Bootstrap und benutzerdefinierten CSS-Dateien -->
  <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel="icon" href="/img/logoGR.png" type="image/x-icon">
</head>

<body>
  <!-- Einbindung der Navigationsleiste -->
  <%- include ('../partials/navbar') %>
  <!-- Einbindung der Alert-Nachrichten -->
  <%- include ('../partials/alerts') %>

  <div class="container my-5">
    <div class="row">
      <!-- Hier wird das Bild des Equipments angezeigt -->
      <div class="col-md-6">
        <% if (data.pic) { %>
        <img src="http://localhost:3000<%= data.pic %>" class="img-fluid" alt="Equipment Image">
        <% } else { %>
        <img src="/img/Placeholder.png" class="img-fluid" alt="Equipment Image">
        <% } %>
      </div>

      <!-- Hier werden die Infos des Equipments angezeigt -->
      <div class="col-md-6" id="infos">
        <h1><%= data.title %></h1>
        <p><%= data.description %></p>
        <p>Artikelnummer: <%= data.articlenumber %></p>
        <p>Verfügbar: <%= data.count %></p>

        <!-- Ausleihen Button soll einen Ausleihvorgang erstellen -->
        <a href="/cart/add/<%=data.id %>" class="btn btn-primary">Jetzt Ausleihen</a>

        <% if (locals.data.edit) { %>
        <!-- Bearbeiten Button -->
        <a href="/equipment/edit/<%= data.id %>" class="btn btn-warning">
          <img src="../img/pencil.png" alt="Bearbeiten" class="img-icon">
        </a>

        <!-- Löschen Button -->
        <form action="/equipment/delete/<%=data.id%>" method="post" class="d-inline">
          <button type="submit" class="btn btn-danger">
            <img src="../img/trash.png" alt="Löschen" class="img-icon">
          </button>
        </form>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Einbindung des Footers -->
  <%- include ('../partials/footer') %>
</body>

</html>