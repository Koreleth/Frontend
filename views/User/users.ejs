<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Einbinden der Bootstrap- und benutzerdefinierten CSS-Dateien -->
  <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <title>Liste aller Nutzer</title>
  <link rel="icon" href="/img/logoGR.png" type="image/x-icon">
</head>

<body>
  <!-- Einbinden der Navbar -->
  <%- include ('../partials/navbar') %>
  <!-- Einbinden der Alerts für Benachrichtigungen -->
  <%- include ('../partials/alerts') %>

  <div class="container my-5">
    <!-- Überschrift für die Seite -->
    <h1 class="text-center mb-4">Liste aller Nutzer</h1>
    <div class="row">
      <!-- Schleife durch alle Nutzer und Einbinden der Nutzerkarte für jeden Nutzer -->
      <% users.forEach((user)=> { %>
      <div class="col-md-4 mb-4">
        <%- include ('../partials/userCard', {user: user}) %>
      </div>
      <% }); %>
    </div>
  </div>

  <!-- Einbinden des Footers -->
  <%- include ('../partials/footer') %>
  <!-- Einbinden der JavaScript-Dateien -->
  <script src="/javascripts/bootstrap.min.js"></script>
  <script src="/javascripts/script.js"></script>
</body>

</html>